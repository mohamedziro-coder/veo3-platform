# Google Gemini API Key (Required for AI features)
GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Project Configuration (Required for Veo Video Generation)
GOOGLE_PROJECT_ID=your_google_cloud_project_id
GOOGLE_LOCATION=us-central1
GCS_BUCKET_NAME=your_gcs_bucket_name

# Google Cloud Service Account Credentials (JSON content)
# Ensure this is a single line or properly escaped if multi-line
GOOGLE_APPLICATION_CREDENTIALS_JSON='{"type": "service_account", ...}'

# Database Configuration (Required for User Management)
# Postgres connection string (e.g. from Neon)
POSTGRES_URL=postgres://user:password@host:port/database?sslmode=require

# Email Service (Resend)
RESEND_API_KEY=re_123456789

# Admin Configuration
ADMIN_EMAIL=admin@example.com
